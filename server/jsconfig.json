{
  "compilerOptions": {
    // Use latest JavaScript features
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,

    // Node.js-specific
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,

    // Code navigation enhancements
    "checkJs": false, // Set to true if you want inline JS type checking
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "#config": ["config/index.js"],
      "#controllers": ["controllers/index.js"],
      "#database": ["database/index.js"],
      "#core": ["core/index.js"],
      "#middlewares": ["middlewares/index.js"],
      "#packages": ["packages/index.js"],
      "#queries": ["queries/index.js"],
      "#routes": ["routes/index.js"],
      "#services": ["services/index.js"],
      "#sessions": ["sessions/index.js"],
      "#translations": ["translations/index.js"],
      "#utils": ["utils/index.js"],
      "#config/*": ["config/*"],
      "#controllers/*": ["controllers/*"],
      "#database/*": ["database/*"],
      "#core/*": ["core/*"],
      "#middlewares/*": ["middlewares/*"],
      "#packages/*": ["packages/*"],
      "#queries/*": ["queries/*"],
      "#routes/*": ["routes/*"],
      "#services/*": ["services/*"],
      "#sessions/*": ["sessions/*"],
      "#translations/*": ["translations/*"],
      "#utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
